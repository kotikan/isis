source 'https://www.rubygems.org'

# The released xmppr4 gem is quite dated, and has bugs
gem 'xmpp4r', git: 'https://github.com/silentgrowl/xmpp4r.git', platforms: :ruby
gem 'smackr', '0.0.6', git: 'https://github.com/silentgrowl/smackr.git', platforms: :jruby
gem 'tinder' # Campfire
gem 'eventmachine'
gem 'daemons'
gem 'hipchat'
gem 'gsl4r'
gem 'activesupport'
gem 'net-ssh'

# Plugins
gem 'nokogiri'
gem 'httparty', '>= 0.8.0'
gem 'tzinfo'
gem 'gdbm'
gem 'therubyrhino', platforms: :jruby
gem 'therubyracer', platforms: :ruby

# Domain
gem 'whois'

# HackerNews
gem 'ruby-hackernews'

# StockTicker
gem 'yahoofinance'

# Uptime
gem 'chronic_duration'

# Weather
gem 'barometer', '0.7.3'

# TWSS
gem 'twss'

# Koticast
gem 'forecast_io'

group :development do
  gem 'pry'
  gem 'pry-rescue'
end

group :test do
  gem 'rspec'
  gem 'timecop'
end
